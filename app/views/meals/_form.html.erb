<div class="row">
  <div class="small-10 small-centered columns">
    <%= form_for(@meal, html: { multipart: true }) do |f| %>

      <div class="field">
        <%= f.label :comment %>
        <%= f.text_area :comment, placeholder: "How was it? Would you recommend it?" %>
      </div>

      <div class="field">
        <%= f.label :ingredients %>
        <%= f.text_area :ingredients, placeholder: "Tell us what you had for your meal - be as verbose as possible" %>
      </div>

      <div class="field">
        <%= f.label :goal_id %>
        <%= f.select :goal_id, @goals.collect {|goal| [goal.name, goal.id]} %>
      </div>

      <div class="field">
        <%= f.label :meal_photo %>
        <%= f.file_field :meal_photo, required: true, class: 'file' %>
      </div>

      <div class="action">
        <%= f.submit %>
      </div>

    <% end %>
  </div>
</div>
