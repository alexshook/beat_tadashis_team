<h2> Best Meals At <%= @user.company.name %><h2>
<ol>
<% @best_meals.each do |meal| %>
	<li><%= link_to("#{meal.user.name} - #{date_uploaded(meal)} (Rating: #{meal.rating.round(2)})", meal)%></li>
<% end %>
</ol>

<h2> Worst Meals At <%= @user.company.name %></h2>

<ol>
<% @worst_meals.each do |meal| %>
	<li><%= link_to("#{meal.user.name} - #{date_uploaded(meal)} (Rating: #{meal.rating.round(2)})", meal)%></li>
<% end %>
</ol>
